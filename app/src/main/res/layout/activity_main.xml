<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EEEEEE">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/device"
                    android:paddingRight="10dp"
                    android:text="전체"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/totla" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/image"
                    android:paddingRight="10dp"
                    android:text="이미지"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/sound"
                    android:paddingRight="10dp"
                    android:text="음악"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/video"
                    android:paddingRight="10dp"
                    android:text="동영상"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/docu"
                    android:paddingRight="10dp"
                    android:text="문서"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_weight="1"
                    android:background="@drawable/button01"
                    android:drawableRight="@mipmap/newfile"
                    android:paddingRight="10dp"
                    android:text="최근 파일"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
